---
import { basics } from '@cv'
import Section from '@/components/Section.astro'
import Mail from '@/icons/Mail.astro'
import Phone from '@/icons/Phone.astro'
import X from '@/icons/X.astro'
import LinkedIn from '@/icons/LinkedIn.astro'
import GitHub from '@/icons/GitHub.astro'
import WhatsApp from '@/icons/whatsapp.astro'
import Facebook from '@/icons/facebook.astro'
import Instagram from '@/icons/instagram.astro'
import Correo from '@/icons/email.astro'
import WorldMap from '@/icons/WorldMap.astro'

const { name, label, image, location, profiles, phone, email } = basics
const { city, region, countryCode } = location

const SOCIAL_ICONS: Record<string, any> ={
    GitHub,
    LinkedIn,
    Correo,
    WhatsApp,
    Facebook,
    Instagram
}
const linkedInfo = profiles.find(({ network }) => network === 'LinkedIn')
const linkedUrl = linkedInfo?.url
const printInfo = [ email, phone, linkedUrl ].filter(Boolean).join(" || ")
---
<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span class="not-print">
                <a class="ubi" href="https://www.google.com/maps/place/Lima/">
                    <WorldMap /> {city}, {region}, {countryCode}
                </a>
            </span>
            <span class="print">
                <WorldMap /> {city}, {region}, {countryCode}
            </span>
            <footer class="print">
                {printInfo}
            </footer>
            <footer class="not-print">
                {
                    //email && <a href={"mailto:${email}"} title={`Enviar un correo electrónico a ${name} a la dirección ${email}.`} target="_blank" rel="noopener noreferrer">
                    //<Mail /></a>
                }
                {
                    //phone && <a href={`tel:${phone}`} title={`Llamar por teléfono a ${name} al número ${phone}.`} target="_self" rel="noopener noreferrer">
                    //<Phone /></a>
                }
                {
                    profiles.map(({network, url, username}) => {
                        const Icon = SOCIAL_ICONS[network]
                        return (
                            <a href={url} title={`Visitar el perfil de ${name} en ${network}.`} target="_blank" rel="noopener noreferrer">
                                <Icon />
                            </a>
                        )
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} />
        </figure>
    </div>
</Section>
<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }
    .info{
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }
    h1{
        font-size: 2rem;
    }
    h2{
        color: #777;
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }
    img{
        aspect-ratio: 1/1;
        object-fit: cover;
        width: 128px;
        border-radius: 16px;
    }
    span{
        color: #000000;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.8rem;
        letter-spacing: 0.05em;
    }
    footer{
        color: #777;
        font-size: 0.65rem;
        display: flex;
        gap: 4px;
        margin-top: 8px;
        margin-bottom: -30px;
    }
    footer a{
        color: #666;
        display: inline-flex;
        align-content: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all .3s ease;
    }
    footer a:hover{
        background: #eee;
        border: 1px solid #ddd;
    }
    .ubi {
        text-decoration: underline;
        color: black;
    }
</style>
---
import { addit } from "@cv"
import Section from "@/components/Section.astro"
import Enlace from '@/icons/link.astro'
---
<Section title = "Formación profesional">
    <ul>
        {
            addit.map(({name, institution, url, ExpedDate, IdCredencial, keywords, autor}) =>{
                const fecha = new Date(ExpedDate).toLocaleDateString('es-ES', {day: 'numeric', month: 'long', year: 'numeric'});
                return(
                    <li>
                        <article>
                            <header class="not-print">
                                <h3>{name}</h3>
                                <h4>
                                    {institution}
                                    {url && (
                                        <a class="enlace-credencial" href={url} target="_blank">
                                            <Enlace />
                                        </a>
                                    )}
                                </h4>
                                <p>Expedición: {fecha}.</p>
                                <p>ID de la credencial: {IdCredencial}.</p>
                                
                            </header>
                            <header class="print">
                                <h3>{name}</h3>
                                <h4>{institution}</h4>
                                <p>Expedición: {fecha}.</p>
                                <p>ID de la credencial: {IdCredencial}.</p>
                            </header>
                            <footer>
                                <p>Palabras clave: 
                                {
                                    keywords.map((keywords) =>{
                                        return <span class="palabras">{keywords}</span>
                                    })
                                }
                                </p>
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>
<style>
    ul {
        list-style-type: disc;
        padding-left: 20px;
    }
    li {
        font-size: 16px;
        margin-bottom: 25px;
    }
    article h3{
        margin-bottom: 4px;
        font-weight: 700;
        color: #111;
    }
    p{
        margin: 0px 0px 2px 0px;
    }
    h4{
        margin: 0px 10px 0px 0px;
        font-weight: 600;
    }
    .enlace-credencial {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 16px;
        height: 16px;
        margin-left: 8px;
        color: #444;
    }
    .palabras {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
        border-radius: 6px;
        background: #eee;
        color: #444;
        font-size: 0.8em;
        font-weight: 400;
        padding: 0.2em 0.5em;
        margin: 0px 9px 5px 0px;
    }
</style>
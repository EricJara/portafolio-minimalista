---
import Section from '@/components/Section.astro'
import {skills} from '@cv'
---
<Section title = 'Skills'>
    <ul>
        {
            skills.map(({ name, level, keywords }) => (
                    <li>
                        <span>
                            { name }
                        </span>
                    </li>
                )
            )
        }
    </ul>
</Section>
<style>
    ul{
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }
    li{
        border-radius: 6px;
        background: #eee;
        color: #444;
        font-size: 0.8em;
        font-weight: 400;
        padding: 0.2em 0.5em;
    }
</style>
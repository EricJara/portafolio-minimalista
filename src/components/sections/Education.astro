---
import Section from '@/components/Section.astro'
import { education } from '@cv'
---
<div class="container">
    <Section title='EducaciÃ³n'>
        <ul>
            {
                education.map(
                    ({ institution, url, area, studyType, startDate, endDate, score, courses }) => {
                        const startYear = new Date(startDate).getFullYear()
                        const endYear = endDate != null ? new Date(endDate).getFullYear() : 'Actualidad'
                        const years = `${startYear} - ${endYear}`
                        return (
                            <li>
                                <article>
                                    <header>
                                        <div>
                                            <h3>{institution}</h3>
                                        </div>
                                        <time> {years} </time>
                                    </header>
                                    <footer>
                                        <p>{studyType} en {area}.</p>
                                    </footer>
                                </article>                            
                            </li>
                        )
                    }
                )
            }
        </ul>
    </Section>
</div>
<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 22px; /* Espacio entre puntos de educacion */
    }
    li{
        margin-bottom: -10px;
    }
    div{
        margin-bottom: -5px;
    }
    article h3{
        font-weight: 600;
        color: #111;
    }
    header{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 4px;
    }
    time{
        color: #555;
        font-size: 0.85rem;
        min-width: 102px;
    }
    @media (width <= 700px){
        time{
            text-align: right;
        }

    }
</style>